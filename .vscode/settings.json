{
  // Use Temurin Java 17 for VS Code
  "java.home": "/Library/Java/JavaVirtualMachines/temurin-17.jdk/Contents/Home",

  // Configure Java 17 runtime
  "java.configuration.runtimes": [
    {
      "name": "JavaSE-17",
      "path": "/Library/Java/JavaVirtualMachines/temurin-17.jdk/Contents/Home",
      "default": true
    }
  ],

  // Android A path
  "android.sdkPath": "D:\\SDK",

  // Android Emulator extension path
  "emulator.emulatorPath": "D:\\SDK\\emulator\\emulator.exe",

  // Gradle uses Java 17
  "gradle.java.home": "/Library/Java/JavaVirtualMachines/temurin-17.jdk/Contents/Home",

  // Gradle JVM arguments
  "gradle.jvm.arguments": "-Dfile.encoding=UTF-8 -Xmx2g",
  "java.configuration.updateBuildConfiguration": "interactive"
}